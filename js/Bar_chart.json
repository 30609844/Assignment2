{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Comparison of diet composition between 2 countries",
  "width": 95,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/30609844/Assignment2/main/data/daily-caloric-supply-derived-from-carbohydrates-protein-and-fat.csv"
  },
  "params": [
    {
      "name": "year_select",
      "value": "1990",
      "bind": {
        "input": "range",
        "min": 1975,
        "max": 2013,
        "step": 1,
        "name": "Year select"
      }
    },
    {
      "name": "Country_1",
      "value": "United States",
      "bind": {
        "input": "select",
        "options": [
          "United States",
          "United Kingdom",
          "Germany",
          "India",
          "China",
          "Japan",
          "South Korea",
          "Australia",
          "Saudi Arabia",
          "Philippines",
          "Indonesia",
          "Vietnam",
          "Ethiopia"
        ],
        "labels": [
          "USA",
          "UK",
          "Germany",
          "India",
          "China",
          "Japan",
          "South Korea",
          "Australia",
          "Saudi Arabia",
          "Philippines",
          "Indonesia",
          "Vietnam",
          "Ethiopia"
        ],
        "name": "Country selection: "
      }
    },
    {
      "name": "Country_2",
      "value": "United Kingdom",
      "bind": {
        "input": "select",
        "options": [
          "United States",
          "United Kingdom",
          "Germany",
          "India",
          "China",
          "Japan",
          "South Korea",
          "Australia",
          "Saudi Arabia",
          "Philippines",
          "Indonesia",
          "Vietnam",
          "Ethiopia"
        ],
        "labels": [
          "USA",
          "UK",
          "Germany",
          "India",
          "China",
          "Japan",
          "South Korea",
          "Australia",
          "Saudi Arabia",
          "Philippines",
          "Indonesia",
          "Vietnam",
          "Ethiopia"
        ],
        "name": "Country selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Year == year_select"},
    {"filter": "datum.Entity == Country_1 || datum.Entity == Country_2"},
    {"fold": ["Animal Protein", "Plant Protein", "Fat", "Carbs"]}
  ],
  "mark": "bar",
  "encoding": {
    "column": {
      "field": "key",
      "title": "",
      "type": "nominal",
      "spacing": 10,
      "header": {"orient": "bottom"}
    },
    "y": {
      "aggregate": "sum",
      "field": "value",
      "title": "kcal per day",
      "scale": {"domain": [0, 2600]}
    },
    "x": {"field": "Entity", "axis": null},
    "color": {
      "field": "Entity",
      "title": "",
      "scale": {"range": ["#7570b3", "#1b9e77"]},
      "legend": {
        "orient": "top"
      }
    },
    "tooltip": [
      {"field": "Entity", "title": "Country", "type": "nominal"},
      {"field": "key", "title": "Source"},
      {"field": "value", "title": "Daily Consumption (kcal)"}
    ]
  }
}